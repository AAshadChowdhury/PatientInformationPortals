        // Get references to the select elements and buttons
        const leftSelect = document.getElementById('leftSelect');
        const rightSelect = document.getElementById('rightSelect');
        const addBtn = document.getElementById('addBtn');
        const removeBtn = document.getElementById('removeBtn');

        // Function to move selected options from left to right
        const moveOptionsToRight = () => {
            const selectedOptions = Array.from(leftSelect.selectedOptions);
            selectedOptions.forEach(option => {
                rightSelect.appendChild(option);
            });
        };

        // Function to move selected options from right to left
        const moveOptionsToLeft = () => {
            const selectedOptions = Array.from(rightSelect.selectedOptions);
            selectedOptions.forEach(option => {
                leftSelect.appendChild(option);
            });
        };

        // Add event listener for the add button
        addBtn.addEventListener('click', moveOptionsToRight);

        // Add event listener for the remove button
        removeBtn.addEventListener('click', moveOptionsToLeft);
